<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_red"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff0000"
        android:text="Red Layout"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:text="Họ và tên: "
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textViewClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:text="Lớp: "
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textViewGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:text="Điểm Trung Bình: "
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <LinearLayout
        android:id="@+id/listButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button1Red"
            android:layout_width="12mm"
            android:layout_height="wrap_content"
            android:ems="2"
            android:text="First"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <Button
            android:id="@+id/buttonPrevious"
            android:layout_width="13mm"
            android:layout_height="wrap_content"
            android:ems="4"
            android:text="Previous"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="12mm"
            android:layout_height="wrap_content"
            android:ems="2"
            android:text="Next"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <Button
            android:id="@+id/buttonLast"
            android:layout_width="12mm"
            android:layout_height="wrap_content"
            android:ems="2"
            android:text="Last"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>



</LinearLayout>
